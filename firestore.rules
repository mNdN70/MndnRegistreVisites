rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access on the users collection for login purposes.
    // This is necessary because the login form queries the collection to verify credentials.
    match /users/{userId} {
      allow read;
    }

    // Default deny all other reads and writes
    match /{document=**} {
      allow read, write: if false;
    }
  }
}