rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access for the 'users' collection for login purposes
    match /users/{userId} {
      allow read;
    }

    // Allow authenticated users to perform any action on other collections
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

    // Explicitly deny writes to 'users' for non-authenticated users if needed,
    // but the rule above already handles it. For clarity, we can add:
    match /users/{userId} {
      allow write: if request.auth != null;
    }

    // Visits can be created by anyone, but only modified/deleted by authenticated users
    match /visits/{visitId} {
      allow create;
      allow read, update, delete: if request.auth != null;
    }

    // Config collections can only be managed by authenticated users
    match /departments/{deptId} {
      allow read, write: if request.auth != null;
    }
    match /employees/{empId} {
      allow read, write: if request.auth != null;
    }
  }
}
