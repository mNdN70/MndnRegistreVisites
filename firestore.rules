rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permite que cualquiera lea (get, list) la colección de usuarios.
    // Esto es necesario para que el formulario de login pueda consultar si un usuario existe.
    match /users/{userId} {
      allow read: if true;
    }

    // Permite que cualquiera cree o actualice una visita (para registrar entrada/salida).
    match /visits/{visitId} {
      allow create, update: if true;
    }

    // Para todas las demás rutas, se requiere autenticación para cualquier tipo de acceso
    // que no haya sido explícitamente permitido arriba.
    match /{path=**} {
      allow read, write: if request.auth != null;
    }
  }
}
