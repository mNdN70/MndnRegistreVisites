rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow anyone to read the user list for login purposes
    match /users/{userId} {
      allow read;
      allow write: if request.auth != null;
    }
    
    // Allow anyone to create/update visits (for entry/exit)
    // Authenticated users can read/delete records from the config panel
    match /visits/{visitId} {
      allow create, update: if true;
      allow read, delete: if request.auth != null;
    }

    // Config collections can only be modified by authenticated users
    match /departments/{deptId} {
        allow read, write: if request.auth != null;
    }

    match /employees/{empId} {
        allow read, write: if request.auth != null;
    }
  }
}
