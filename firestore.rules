rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow login query
    match /users/{userId} {
      allow read: if true;
    }

    // Allow visitors to register entry and exit
    match /visits/{visitId} {
      allow create, update: if true;
    }
    
    // Only authenticated users can write to other collections
    match /{path=**} {
      allow write: if request.auth != null;
    }
  }
}
