rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /visits/{visitId=**} {
      // Cualquiera puede crear una visita (necesario para el formulario p√∫blico)
      allow create: if true;
      // Solo usuarios autenticados pueden leer o modificar visitas
      allow read, update, delete: if request.auth != null;
    }

    match /departments/{departmentId} {
      // Cualquiera puede leer la lista de departamentos
      allow get, list: if true;
      // Solo usuarios autenticados pueden crear, actualizar o borrar
      allow write: if request.auth != null;
    }
    match /employees/{employeeId} {
       // Cualquiera puede leer la lista de empleados
      allow get, list: if true;
      // Solo usuarios autenticados pueden crear, actualizar o borrar
      allow write: if request.auth != null;
    }
  }
}
