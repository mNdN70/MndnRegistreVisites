
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read access to visits, employees, and departments for the app to function.
    match /visits/{visitId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /employees/{employeeId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /departments/{departmentId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Secure the users collection. Only authenticated users should manage other users.
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }
  }
}
